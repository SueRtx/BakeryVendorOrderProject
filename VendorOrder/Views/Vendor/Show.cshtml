@{
  Layout = "_Layout";
}
  <body>
    <div class="container"></div>
      @using VendorOrder.Models;

      <h3>Here are all the orders in this vendor:</h3>

      <ol>
      @foreach (Order order in @Model["order"])
      {
       <h3>Vendor: @Model["vendor"].Name</h3> 

        <li>
        
        <a href='/vendor/@Model["vendor"].Id/orders/@order.Id'>Description: @order.Description</a>
        <a href='/vendor/@Model["vendor"].Id/orders/@order.Id'>Price: $ @order.Price</a>
        <a href='/vendor/@Model["vendor"].Id/orders/@order.Id'>Date: @order.Date</a></li>
      }
      </ol>

      <p><a href='/vendor/@Model["vendor"].Id/order/new'>Add a new order</a></p>
      <p><a href='/vendor'>Return to vendor list</a></p>
      <p><a href='/'>Return to Home Page</a></p> 
    
  </body>
