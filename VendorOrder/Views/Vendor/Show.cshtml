@{
  Layout = "_Layout";
}

<div class="container">
  @using VendorOrder.Models;   
  <h1 class="title"><strong>S U N N Y * B A K E R Y</strong></h1>
  
  <h2><strong>Orders</strong></h2>
  <h5><strong>Vendor: @Model["vendor"].Name </strong> * Click on order to see details *</h5>
  <div class="infoBox">
    @if (@Model["order"].Count == 0)
    {
      <h4><strong>Order List is EMPTY!</strong></h4>
    }
    <ol>
    @foreach (Order order in @Model["order"])
    {             
      <li><h3><a href='/vendor/@Model["vendor"].Id/order/@order.Id'>@order.Description order from @order.Date</h3></li>          
    }
    </ol>
    <h4 id="addOrderLink"><a href='/vendor/@Model["vendor"].Id/order/new'>Add New Order</a></h4>
  </div>

  <h4 id="addVendorLink"><a href='/vendor'>View Vendors</a></h4> 
  <h4 id="rightSideBtn"><a href='/'>Back Home</a></h4> 
</div>  

