<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My To-Do List!</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  </head>
  <body>
    <div class="container"></div>
      @using VendorOrder.Models;

      <h3>Here are all the orders in this vendor:</h3>

      <ol>
      @foreach (Order order in @Model["order"])
      {
        <li>Description: <a href='/vendor/@Model["vendor"].Id/orders/@order.Id'>@order.Description
        <a href='/vendor/@Model["vendor"].Id/orders/@order.Id'></a>Price: $ @order.Price</a>
        <a href='/vendor/@Model["vendor"].Id/orders/@order.Id'>Date: @order.Date</a></li>
      }
      </ol>

      <p><a href='/vendor/@Model["vendor"].Id/order/new'>Add a new order</a></p>
      <p><a href='/vendor'>Return to vendor list</a></p>
      <p><a href='/'>Return to Home Page</a></p> 
    
  </body>
</html>