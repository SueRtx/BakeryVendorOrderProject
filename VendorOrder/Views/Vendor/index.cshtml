@{
  Layout = "_Layout";
}

  <body>
    <div class="container">
      <div class="page">
        @using VendorOrder.Models;

        <h1><strong>S U N N Y * B A K E R Y</strong></h1>

        @* <h4 id="homePageLink"><a href='/'>Back Home</a></h4>
          <h4 id="addVendorLink"><a href='/vendor/new'>Add Vendor</a></h4> *@

        <h2><strong>Vendors List</strong></h2>
        <h5>Click on Vendor's name to add order.</h5>
        @if (@Model.Count == 0)
        {
          <h4>Vendor List is EMPTY!</h4>
        } 

        @foreach (Vendor vendor in Model)
        {
        
          <h3 id="vendorNameList"><a href='/vendor/@vendor.Id'>@vendor.Name</a></h3>
        }

         <h4 id="homePageLink"><a href='/'>Back Home</a></h4>
          <h4 id="addVendorLink"><a href='/vendor/new'>Add Vendor</a></h4>
      </div>
    </div>
  </body>
