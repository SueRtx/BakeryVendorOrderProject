@{
  Layout = "_Layout";
}

  <body>
    <div class="container">
      @using VendorOrder.Models;

      <h1>Vendors</h1>

      @if (@Model.Count == 0)
      {
        <h3>No Vendors have been added yet!</h3>
      } 

      @foreach (Vendor vendor in Model)
      {
        <h3><a href='/vendor/@vendor.Id'>@vendor.Name</a></h3>
      }
      <p><a href='/vendor/new'>Add Vendor</a></p>
      <p><a href='/'>Back Home Page</a></p> 

    </div>
  </body>
