@{
  Layout = "_Layout";
}

<div class="container">
  <h1 class="title"><strong>S U N N Y * B A K E R Y</strong></h1>

  <h2><strong>Add Vendor</strong></h2>
  <div class="infoBox">
    <form action="/vendor" method="post">
      <label for="vendorName">Enter Vendor name: </label>
      <input id="vendorName" name="vendorName" type="text" required>
      <label for="vendorDescription">Vendor Description</label>
      <input id="vendorDescription" name="vendorDescription" type="text" required>
      <button type="submit" id="btn">Add </button>
    </form>
  </div>

  <h4 id="addVendorLink"><a href='/vendor'>Vendor List</a></h4>
  <h4 id="rightSideBtn"><a href='/'>Back Home</a></h4>   
</div>

